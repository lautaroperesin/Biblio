@page "/admin/carreras"
@inject NavigationManager _navigationManager
@inject IGenericService<Carrera> _carreraService
@inject SweetAlertService _sweetAlert
@rendermode InteractiveServer

<EncabezadoPage Titulo="Administracion de Carreras" Descripcion="Gestiona los carreras de los libros en la plataforma"/>

<div class="container py-4">
    @if (isLoading)
    {
        <div class="d-flex align-items-center justify-content-center my-4">
            <div class="spinner-border text-primary" role="status"></div>
            <span class="ms-2 text-primary">Cargando carreras...</span>
        </div>
    }
    else
    {
        <button title="Nuevo" class="btn btn-primary mb-3" data-bs-toggle="modal" @onclick="Nuevo" data-bs-target="#NuevoEditarModal">Nuevo</button>
        @if (carreras != null && carreras.Count > 0)
        {
            <TablaIdNombreConFiltro ListEntity="@(carreras.Cast<IEntityIdNombre>().ToList())" OnEliminar="Eliminar" OnModificar="Modificar"></TablaIdNombreConFiltro>
            <NuevoEditarIdNombre Titulo="Carrera" Entity="carreraSeleccionada" OnGuardar="Guardar"></NuevoEditarIdNombre>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                No hay carreras registrados.
            </div>
        }
    }
</div>

@code {
    List<Carrera>? carreras = new List<Carrera>();
	Carrera carreraSeleccionada = new();

    bool isLoading;

    protected override async Task OnInitializedAsync()
    {
        await LoadCarreras();
    }

    private async Task LoadCarreras()
    {
        isLoading = true;
        carreras = await _carreraService.GetAllAsync();
        isLoading = false;
    }

    private void Modificar(IEntityIdNombre entity)
    {
        carreraSeleccionada = (Carrera)entity;
    }

    private void Nuevo()
    {
        carreraSeleccionada = new();
    }

    private async Task Guardar(IEntityIdNombre entity)
    {
        try
        {
            isLoading = true;
            Carrera carreraToSave = (Carrera)entity;
            if (carreraToSave.Id == 0)
            {
                // Nuevo carrera
                await _carreraService.AddAsync(carreraToSave);
                await _sweetAlert.FireAsync("Creado", "El carrera ha sido creado exitosamente.", SweetAlertIcon.Success);
            }
            else
            {
                // Actualizar carrera existente
                await _carreraService.UpdateAsync(carreraToSave);
                await _sweetAlert.FireAsync("Actualizado", "El carrera ha sido actualizado exitosamente.", SweetAlertIcon.Success);
            }
            carreras = await _carreraService.GetAllAsync();
        }
        catch (Exception ex)
        {
            await _sweetAlert.FireAsync("Error", "Hubo un error al guardar el carrera.", SweetAlertIcon.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task Eliminar(IEntityIdNombre entity)
    {
        SweetAlertResult respuesta = await _sweetAlert.FireAsync(new SweetAlertOptions
            {
                Title = "Eliminando carrera",
                Text = $"¿Está seguro que desea borrar al carrera {entity.Nombre}",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Si, quiero borrarlo!",
                CancelButtonText = "No, espera"
            });
        if (respuesta.IsConfirmed)
        {
            try
            {
                await _carreraService.DeleteAsync(entity.Id);
                isLoading = true;
                carreras = await _carreraService.GetAllAsync();
                await _sweetAlert.FireAsync("Eliminado", "El carrera ha sido eliminado exitosamente.", SweetAlertIcon.Success);
            }
            catch (Exception ex)
            {
                await _sweetAlert.FireAsync("Error", "Hubo un error al eliminar el carrera.", SweetAlertIcon.Error);
            }
            finally
            {
                isLoading = false;
            }
        }
    }
}
