@page "/admin/autores"
@inject NavigationManager _navigationManager
@inject IGenericService<Autor> _autorService
@inject SweetAlertService _sweetAlert
@rendermode InteractiveServer

<EncabezadoPage Titulo="Administracion de Autores" Descripcion="Gestiona los autores de los libros en la plataforma"/>

<div class="container py-4">
            <div class="form-group">
            <div class="row align-items-center g-2">
                <div class="col-auto">
                    <button title="Nuevo" class="btn btn-info mb-2" @onclick="Nuevo" data-bs-toggle="modal" data-bs-target="#NuevoEditarModal">Nuevo</button>
                </div>
                <div class="col">
                    <div class="col-6 d-flex align-items-center">
                        <label class="form-check-label">👁️ Ver eliminados</label>
                        <InputCheckbox @bind-Value="MostrarEliminados" @bind-Value:after="GetAutores" class="mb-2" />
                    </div>
                </div>
            </div>
        </div>

    @if (isLoading)
    {
        <div class="d-flex align-items-center justify-content-center my-4">
            <div class="spinner-border text-primary" role="status"></div>
            <span class="ms-2 text-primary">Cargando autores...</span>
        </div>
    }
    else
    {
        @if (autores != null && autores.Count > 0)
        {
            <TablaIdNombreConFiltro ListEntity="@(autores.Cast<IEntityIdNombre>().ToList())" OnEliminar="Eliminar" OnModificar="Modificar" OnRestaurar="Restaurar" MostrarEliminados="MostrarEliminados"></TablaIdNombreConFiltro>
            <NuevoEditarIdNombre Titulo="Autor" Entity="autorSeleccionado" OnGuardar="Guardar"></NuevoEditarIdNombre>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                @if (MostrarEliminados)
                {
                    <text>No hay autores eliminados.</text>
                }
                else
                {
                    <text>No hay autores registrados.</text>
                }
            </div>
        }
    }
</div>

@code {
    List<Autor>? autores = new List<Autor>();
    Autor autorSeleccionado = new Autor();

    bool isLoading;

    public bool MostrarEliminados { get; set; } = false;

    private async Task GetAutores()
    {
        isLoading = true;
        if(MostrarEliminados)
        {
            autores = await _autorService.GetAllDeletedsAsync();
        }
        else
        {
            autores = await _autorService.GetAllAsync();
        }
        isLoading = false;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadAutores();
    }

    private async Task LoadAutores()
    {
        isLoading = true;
        autores = await _autorService.GetAllAsync();
        isLoading = false;
    }

    private void Modificar(IEntityIdNombre entity)
    {
        autorSeleccionado = (Autor)entity;
    }

    private void Nuevo()
    {
        autorSeleccionado = new();
    }

    private async Task Guardar(IEntityIdNombre entity)
    {
        try
        {
            isLoading = true;
            Autor autorToSave = (Autor)entity;
            if (autorToSave.Id == 0)
            {
                // Nuevo autor
                await _autorService.AddAsync(autorToSave);
                await _sweetAlert.FireAsync("Creado", "El autor ha sido creado exitosamente.", SweetAlertIcon.Success);
            }
            else
            {
                // Actualizar autor existente
                await _autorService.UpdateAsync(autorToSave);
                await _sweetAlert.FireAsync("Actualizado", "El autor ha sido actualizado exitosamente.", SweetAlertIcon.Success);
            }
            autores = await _autorService.GetAllAsync();
        }
        catch (Exception ex)
        {
            await _sweetAlert.FireAsync("Error", "Hubo un error al guardar el autor.", SweetAlertIcon.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task Eliminar(IEntityIdNombre entity)
    {
        SweetAlertResult respuesta = await _sweetAlert.FireAsync(new SweetAlertOptions
            {
                Title = "Eliminando autor",
                Text = $"¿Está seguro que desea borrar al autor {entity.Nombre}",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Si, quiero borrarlo!",
                CancelButtonText = "No, espera"
            });
        if (respuesta.IsConfirmed)
        {
            try
            {
                await _autorService.DeleteAsync(entity.Id);
                isLoading = true;
                autores = await _autorService.GetAllAsync();
                await _sweetAlert.FireAsync("Eliminado", "El autor ha sido eliminado exitosamente.", SweetAlertIcon.Success);
            }
            catch (Exception ex)
            {
                await _sweetAlert.FireAsync("Error", "Hubo un error al eliminar el autor.", SweetAlertIcon.Error);
            }
            finally
            {
                isLoading = false;
            }
        }
    }

    private async Task Restaurar(IEntityIdNombre entity)
    {
        SweetAlertResult respuesta = await _sweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "Restaurando autor",
            Text = $"¿Está seguro que desea restaurar al autor {entity.Nombre}?",
            Icon = SweetAlertIcon.Question,
            ShowCancelButton = true,
            ConfirmButtonText = "Si, quiero restaurarlo!",
            CancelButtonText = "No, espera"
        });
        if (respuesta.IsConfirmed)
        {
            try
            {
                isLoading = true;
                await _autorService.RestoreAsync(entity.Id);
                autores = await _autorService.GetAllDeletedsAsync();
                await _sweetAlert.FireAsync("Restaurado", "El autor ha sido restaurado exitosamente.", SweetAlertIcon.Success);
            }
            catch (Exception ex)
            {
                await _sweetAlert.FireAsync("Error", "Hubo un error al restaurar el autor.", SweetAlertIcon.Error);
            }
            finally
            {
                isLoading = false;
            }
        }
    }
}
